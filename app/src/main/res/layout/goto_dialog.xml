<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">


    <TextView
        android:id="@+id/textview_storedDateTime"
        android:layout_width="391dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal"
        android:text="time you stored this location"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textview_street"
        android:layout_width="391dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textview_storedDateTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:text="your street and number"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview_zipcodeCity"
        android:layout_width="391dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textview_street"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="your zipcode"
        android:textSize="20sp" />


</RelativeLayout>